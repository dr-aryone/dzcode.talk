// these are my custom vscode shortcuts
// Place your key bindings in this file to overwrite the defaults
[
  // my keybinding
  {
    "key": "ctrl+shift+alt+e",
    "command": "editor.action.marker.next",
    "when": "editorFocus && !editorReadonly"
  },
  {
    "key": "tab",
    "command": "editor.emmet.action.expandAbbreviation",
    "when": "config.emmet.triggerExpansionOnTab && editorTextFocus && !editorReadonly && !editorTabMovesFocus"
  },
  {
    "key": "ctrl+e",
    "command": "editor.emmet.action.expandAbbreviation"
  },
  {
    "key": "tab",
    "command": "-editor.emmet.action.expandAbbreviation",
    "when": "config.emmet.triggerExpansionOnTab && editorTextFocus && !editorReadonly && !editorTabMovesFocus"
  },
  {
    "key": "ctrl+shift+alt+0",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "ctrl+shift+alt+h",
    "command": "editor.action.triggerParameterHints"
  },
  // end of my keybinding
  {
    "key": "alt+s alt+s",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "shift+alt+2",
    "command": "-workbench.action.splitEditor"
  },
  {
    "key": "ctrl+numpad_divide",
    "command": "editor.foldAllBlockComments",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+k ctrl+oem_2",
    "command": "-editor.foldAllBlockComments",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+s",
    "command": "editor.action.formatDocument",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+alt+f",
    "command": "-editor.action.formatDocument",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+numpad_divide",
    "command": "editor.action.addCommentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+k ctrl+c",
    "command": "-editor.action.addCommentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+numpad_divide",
    "command": "editor.action.removeCommentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+k ctrl+u",
    "command": "-editor.action.removeCommentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+numpad_divide",
    "command": "editor.action.blockComment",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+shift+[KeyM]",
    "command": "-editor.action.blockComment",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+numpad_divide",
    "command": "editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+a",
    "command": "-editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+numpad_divide",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+[KeyM]",
    "command": "-editor.action.commentLine",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+numpad_divide",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+[Period]",
    "command": "-editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+a ctrl+shift+m",
    "command": "extension.vscode-git-automator.addAndCommitCurrentFile"
  },
  {
    "key": "ctrl+shift+z",
    "command": "-extension.vscode-git-automator.addAndCommitCurrentFile"
  },
  {
    "key": "ctrl+oem_8",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+oem_3",
    "command": "-workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+s",
    "command": "workbench.action.files.save"
  },
  {
    "key": "ctrl+s",
    "command": "-workbench.action.files.save"
  },
  {
    "key": "cmd+v",
    "command": "pasteAndIndent.action",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+v",
    "command": "editor.action.clipboardPasteAction",
    "when": "!editorTextFocus"
  },
  {
    "key": "cmd+shift+v",
    "command": "editor.action.clipboardPasteAction",
    "when": "editorTextFocus && !editorReadonly"
  }
]